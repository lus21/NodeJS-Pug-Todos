extends layout.pug

block content
    div.container
        h2 See all Users,add new,update or delete
        a.btn.btn-success(href="/users/new") Add new User
        h1 All Users
        table.table.table_small
            thead
                tr
                    th Name
                    th Age
                    th Actions
            tbody
                if users.length > 0
                    each user in users
                        tr
                            td=user.name
                            td=user.age 
                            td 
                                a.btn.btn-primary(href="/users/update/"+user.id) Update
                                a.btn.btn-success.btn_left_margin(href="/users/delete/"+user.id) Delete
                    tfoot
                        tr
                            td.text-right(colspan=3) Count: #{users.length}          
                else
                    td.text-center(colspan=3) No results                